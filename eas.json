{
  "cli": {
    "version": ">= 5.9.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true,
        "resourceClass": "m-medium",
        "cache": {
          "key": "development-ios-{{allShas}}"
        }
      },
      "android": {
        "buildType": "apk",
        "cache": {
          "key": "development-android-{{allShas}}"
        }
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false,
        "resourceClass": "m-medium",
        "cache": {
          "key": "preview-ios-{{allShas}}"
        }
      },
      "android": {
        "buildType": "apk",
        "cache": {
          "key": "preview-android-{{allShas}}"
        }
      }
    },
    "production": {
      "distribution": "store",
      "ios": {
        "simulator": false,
        "resourceClass": "m-medium",
        "cache": {
          "key": "production-ios-{{allShas}}"
        }
      },
      "android": {
        "buildType": "app-bundle",
        "cache": {
          "key": "production-android-{{allShas}}"
        }
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "$APPLE_ID",
        "ascAppId": "$APP_STORE_CONNECT_TEAM_ID",
        "appleTeamId": "$APPLE_TEAM_ID"
      },
      "android": {
        "serviceAccountKeyPath": "./path/to/service-account-key.json",
        "track": "internal"
      }
    }
  }
} 